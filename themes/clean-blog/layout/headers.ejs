<header class="intro-header" style="background-image: url('<%- theme.default_cover %>')"	>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>Post images</h1>
                    <h2 class="post-subheading">
                       <i class="fa fa-map-marker"></i> Las Canteras, Gran Canaria.
                    </h2>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <% site.posts.each(function(item){ %>
            	<% if (item.cover){ %>
                 	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    	<a href="#" data-featherlight="<%- item.cover %>">
                    	    <img src="<%- item.cover %>" class="img-thumbnail img-responsive" />
                    	</a>
                    	<p> <i class="fa fa-map-marker"></i> <%- item.cover_caption %> </p>
                	</div>
               	<% } %>
            <% }); %>
        </div>
    </div>
</div>